<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".PiActivity">

    <Button
        android:id="@+id/button_Connect_RGB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="168dp"
        android:layout_marginBottom="28dp"
        android:onClick="connectToServer"
        android:text="Connect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextNumber_green_value"
        android:layout_width="87dp"
        android:layout_height="48dp"
        android:layout_marginBottom="70dp"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="number"
        android:text="0"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.175"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextNumber_blue_value"
        android:layout_width="87dp"
        android:layout_height="48dp"
        android:layout_marginBottom="70dp"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="number"
        android:text="0"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.814"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextNumber_red_value"
        android:layout_width="87dp"
        android:layout_height="48dp"
        android:layout_marginBottom="70dp"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="number"
        android:text="0"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/seekBar_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <SeekBar
        android:id="@+id/seekBar_green"
        android:layout_width="185dp"
        android:layout_height="33dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="85dp"
        android:max="255"
        android:progressTint="#007F00"
        android:rotation="-90"
        android:thumbTint="#00FF00"
        app:layout_constraintBottom_toTopOf="@+id/editTextNumber_green_value"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <SeekBar
        android:id="@+id/seekBar_blue"
        android:layout_width="185dp"
        android:layout_height="34dp"
        android:layout_marginBottom="85dp"
        android:max="255"
        android:progressTint="#00007F"
        android:rotation="-90"
        android:thumbTint="#0000FF"
        app:layout_constraintBottom_toTopOf="@+id/editTextNumber_blue_value"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.36"
        app:layout_constraintStart_toEndOf="@+id/seekBar_green"
        tools:ignore="SpeakableTextPresentCheck" />

    <SeekBar
        android:id="@+id/seekBar_red"
        android:layout_width="232dp"
        android:layout_height="44dp"
        android:layout_marginBottom="85dp"
        android:max="255"
        android:progressTint="#7F0000"
        android:rotation="-90"
        android:thumbTint="#FF0000"
        app:layout_constraintBottom_toTopOf="@+id/editTextNumber_red_value"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/button_fade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="44dp"
        android:onClick="sendFade"
        android:text="Start Fade"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/seekBar_fade_speed"
        android:layout_width="199dp"
        android:layout_height="24dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="52dp"
        android:progressTint="#00FFFFFF"
        android:thumbTint="#5E5E5E"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_toAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="104dp"
        android:onClick="switchScreens"
        android:text="go to Alarm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBar_fade_speed" />

    <Button
        android:id="@+id/button_strobe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="44dp"
        android:onClick="sendStrobe"
        android:text="Start Strobe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_fade" />

    <SeekBar
        android:id="@+id/seekBar_strobe_frequency"
        android:layout_width="191dp"
        android:layout_height="26dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="36dp"
        android:progressTint="#00FFFFFF"
        android:thumbTint="#5E5E5E"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBar_fade_speed" />

</android.support.constraint.ConstraintLayout>