<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="false"
    android:focusedByDefault="false"
    android:transitionGroup="true"
    tools:context=".CommsActivity">

    <Button
        android:id="@+id/button_Send"
        android:layout_width="153dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_Connect_PC"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="127dp"
        android:layout_marginEnd="129dp"
        android:layout_marginBottom="31dp"
        android:onClick="sendKeyboardInput"
        android:text="Send" />

    <Button
        android:id="@+id/button_Connect_PC"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="122dp"
        android:layout_marginEnd="129dp"
        android:layout_marginBottom="78dp"
        android:onClick="connectToServer"
        android:text="Connect" />

    <Button
        android:id="@+id/button_RightClick"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_Send"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="53dp"
        android:onClick="sendRightClick"
        android:text="Right Click" />

    <Button
        android:id="@+id/button_LeftClick"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_Send"
        android:layout_alignParentStart="true"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="50dp"
        android:onClick="sendLeftClick"
        android:text="Left Click" />

    <EditText
        android:id="@+id/editText_KeyboardInput"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="33dp"
        android:editable="true"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:text="KeyboardInput" />

    <Button
        android:id="@+id/button_Remove"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_Send"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="118dp"
        android:onClick="sendRemove"
        android:text="Remove" />

    <Button
        android:id="@+id/button_Space"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_LeftClick"
        android:layout_alignParentStart="true"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="24dp"
        android:onClick="sendSpace"
        android:text="Space" />


</RelativeLayout>